@model ValemobiWeb.Models.MercadoriaViewModel

@{
    ViewData["Title"] = "Valemobi Web - Mercadorias";
}

<h1>Índice de Mercadorias</h1>
<br />

<div class="panel panel-info">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-1">
                Código ID
            </div>
            <div class="col-md-2">
                Tipo
            </div>
            <div class="col-md-2">
                Nome
            </div>
            <div class="col-md-2">
                Categoria
            </div>
            <div class="col-md-1">
                Preco
            </div>
            <div class="col-md-1">
                Quantidade
            </div>
        </div>
    </div>

    <div class="panel-body">
        @foreach(var item in Model.Itens)
        {
            <div class="row">
                <div class="col-md-1">
                    @item.ID
                </div>
                <div class="col-md-2">
                    @item.Tipo
                </div>
                <div class="col-md-2">
                    @item.Nome
                </div>
                <div class="col-md-2">
                    @item.Negocio
                </div>
                <div class="col-md-1">
                    @String.Format("{0:C}", item.Preco)
                </div>
                <div class="col-md-1">
                    @item.Quantidade
                </div>
                <div class="col-md-1">
                </div>
                <div class="col-md-1">
                    <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a>
                </div>
                <div class="col-md-1">
                    <a asp-action="Delete" asp-route-id="@item.ID">Remover</a>
                </div>
            </div>
        }
    </div>

    <div class="panel-footer">
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <a asp-action="Create">
                <button type="button" class="btn btn-default">
                    Cadastrar mercadoria
                </button>
            </a>
        </div>
    </div>
</div>